
@{
    ViewBag.Title = "Đề xuất nhập kho";
    Layout = "~/Areas/Employee/Views/Shared/_LayoutEmployee.cshtml";
}

<div class="col-sm-10 clear">
    <div class="content-body">
        @RenderPage("~/Views/Shared/_Logout.cshtml")
        <div class="col-sm-12">
            <a class="btn btn-primary" onclick="ImportDialog()"><i class="glyphicon glyphicon-save"> <span>Đề xuất nhập kho</span></i></a>
        </div>
        <div class="col-sm-12" style="height:20px;"></div>
        <div class="col-sm-12">
            <div class="panel-group">
                <div class="panel panel-primary">
                    <div class="panel-heading"><h4>Danh sách tồn kho</h4></div>
                    <div class="panel-body">
                        @if (ViewBag.ListWareHouse != null)
                        {
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>Mã sản phẩm</th>
                                        <th>Tên sản phẩm</th>
                                        <th>Loại sản phẩm</th>
                                        <th>Số lượng tồn kho</th>
                                    </tr>
                                </thead>
                                @foreach (var item in ViewBag.ListWareHouse)
                                {
                                    <tbody>
                                        <tr>
                                            <td>@item.ID</td>
                                            <td>@item.productName</td>
                                            <td>@item.productType</td>
                                            <td>@item.quantity</td>
                                        </tr>
                                    </tbody>
                                }
                            </table>
                        }
                    </div>
                </div>
            </div>
        </div>
        <div class="col-sm-12">
            <div class="modal fade" id="ImportDialog">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <a class="close" data-dismiss="modal">&times;</a>
                            <h4 class="modal-title">Đề xuất nhập kho</h4>
                        </div>
                        <div class="modal-body">
                            <form id="ClassSubmit">
                                <div class="form-group col-sm-12" style="height:25px;">
                                    <div class="col-sm-5">@Html.Label("Môn học:", new { @class = "label-style2" })</div>
                                    <div class="col-sm-7">
                                        @Html.DropDownListFor(Model => Model.subjectID, ViewBag.ListSubjectDrop as SelectList, null, new { @class = "form-control" })
                                    </div>
                                </div>
                                <div class="col-sm-12" style="width:auto; height:10px;"></div>
                                <div class="form-group col-sm-12" style="height:25px;">
                                    <div class="col-sm-5">@Html.Label("Ngày học:", new { @class = "label-style2" })</div>
                                    <div class="col-sm-7">
                                        @Html.DropDownListFor(Model => Model.dayID, ViewBag.ListDay as SelectList, null, new { @class = "form-control" })
                                    </div>
                                </div>
                                <div class="col-sm-12" style="width:auto; height:10px;"></div>
                                <div class="form-group col-sm-12" style="height:25px;">
                                    <div class="col-sm-5">@Html.Label("Ca học:", new { @class = "label-style2" })</div>
                                    <div class="col-sm-7">
                                        @Html.DropDownListFor(Model => Model.timeID, ViewBag.ListTime as SelectList, null, new { @class = "form-control" })
                                    </div>
                                </div>
                                <div class="col-sm-12" style="width:auto; height:10px;"></div>
                                <div class="form-group col-sm-12" style="height:25px;">
                                    <div class="col-sm-5">@Html.Label("Phòng học:", new { @class = "label-style2" })</div>
                                    <div class="col-sm-7">
                                        @Html.DropDownListFor(Model => Model.roomID, ViewBag.ListRoom as SelectList, null, new { @class = "form-control" })
                                    </div>
                                </div>
                            </form>
                            <div style="text-align:center;display:none;" id="loading-gif">
                                <img src="~/Content/Image/loading.gif" />
                            </div>
                        </div>
                        <div class="modal-footer">
                            <a class="btn btn-default" onclick="CloseImport()">Cancel</a>
                            <a class="btn btn-success" onclick="ConfirmImport()">Submit</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
